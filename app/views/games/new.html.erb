<h1>New Game</h1>
<div id="letters">
  <% @letters.each do |l| %>
  <h2 id="letter"><%= l %></h2>
  <% end %>
</div>

<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label>What's the longest word you can find?</label>
  <input type="text" placeholder="your word" name="user_input">
  <input type="submit" value="play">
</form>